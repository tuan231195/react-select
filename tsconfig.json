{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es6",
		"declaration": true,
		"outDir": "dist",
		"module": "CommonJS",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"jsx": "react",
		"sourceMap": true,
		"paths": {
			"src/*": ["*"]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			},
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			}
		]
	},
	"include": ["src"],
	"exclude": ["src/**/*.spec.ts"]
}
