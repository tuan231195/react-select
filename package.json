{
	"name": "@vdtn359/react-select",
	"version": "0.0.0-development",
	"description": "Tailwind react select implementation",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"url": "git@github.com:tuan231195/react-select.git"
	},
	"scripts": {
		"build:storybook": "build-storybook -o .storybook/dist",
		"deploy": "gh-pages -d .storybook/dist",
		"semantic-release": "semantic-release",
		"storybook": "start-storybook -p 5000",
		"build": "webpack && ttsc",
		"commit": "git-cz",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "eslint 'src/**/*.{ts,js}'",
		"prettier:check": "prettier --check 'src/**/*.{ts,js}'",
		"validate": "run-s test:coverage lint prettier:check",
		"ci:validate": "rm -rf node_modules && npm ci && npm run validate"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-object-rest-spread": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.5",
		"@babel/preset-typescript": "^7.12.1",
		"@commitlint/cli": "8.3.5",
		"@commitlint/config-conventional": "8.3.4",
		"@semantic-release/changelog": "5.0.0",
		"@semantic-release/commit-analyzer": "8.0.1",
		"@semantic-release/git": "9.0.0",
		"@semantic-release/npm": "7.0.3",
		"@semantic-release/release-notes-generator": "9.0.1",
		"@storybook/addon-actions": "^6.0.28",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-knobs": "^6.0.28",
		"@storybook/addon-notes": "^5.3.21",
		"@storybook/addons": "^6.0.28",
		"@storybook/react": "^6.0.28",
		"@types/jest": "25.1.4",
		"@types/react": "^16.9.56",
		"@typescript-eslint/eslint-plugin": "2.22.0",
		"@typescript-eslint/parser": "2.22.0",
		"babel-plugin-macros": "^2.8.0",
		"babel-plugin-styled-components": "^1.11.1",
		"clean-webpack-plugin": "^3.0.0",
		"commitizen": "4.0.3",
		"core-js": "^3.7.0",
		"cz-conventional-changelog": "3.1.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"fork-ts-checker-webpack-plugin": "^6.0.1",
		"gh-pages": "^3.1.0",
		"husky": "4.2.3",
		"jest": "25.1.0",
		"lint-staged": "10.0.8",
		"mini-css-extract-plugin": "^1.3.0",
		"npm-run-all": "4.1.5",
		"postcss": "^8.1.7",
		"postcss-import": "^13.0.0",
		"postcss-nested": "^4.2.3",
		"postcss-preset-env": "^6.7.0",
		"prettier": "1.19.1",
		"react-docgen-typescript-loader": "^3.7.2",
		"react-dom": "^17.0.1",
		"react-svg": "^11.1.1",
		"semantic-release": "17.0.4",
		"tailwindcss": "^1.9.6",
		"ts-jest": "25.2.1",
		"ttypescript": "1.5.10",
		"typescript": "3.8.3",
		"typescript-transform-paths": "1.1.14",
		"webpack": "^4.44.2",
		"webpack-cli": "^4.2.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged",
			"pre-push": "npm run validate"
		}
	},
	"lint-staged": {
		"**/*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		],
		"**/*.{json,html,css,yml}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@vdtn359/content-editable": "^3.3.3",
		"classnames": "^2.2.6",
		"lodash.debounce": "^4.0.8",
		"styled-components": "^5.2.1"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	}
}
